#include <Adafruit_LiquidCrystal.h>

int seconds = 0;
int analogPin = 0;
int pulsador1 = 1;
int pulsador2 = 2;
int val = 0;
int pul1=0;
int pul2=0;
int i=0;

Adafruit_LiquidCrystal lcd_1(0);

void setup()
{
  Serial.begin(9600);
  lcd_1.begin(16, 2);

  lcd_1.print("hello world");
}

void loop()
{
  
  
  pul1 = analogRead(pulsador1);
  //Serial.println(pul1);
  pul2 = analogRead(pulsador2);
  
  
  if(pul1>500){
    i=1;}
  
    if(i==1){  
    
    
  val = analogRead(analogPin);
  Serial.println(val);
  lcd_1.setCursor(0, 1);
  lcd_1.print(seconds);
  lcd_1.setBacklight(1);
  lcd_1.setBacklight(0);
  seconds += 1;
      
      if(pul2>500){
        i=0;
      }
      
      
    }}
